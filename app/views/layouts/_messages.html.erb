<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= case name when "notice" then "success" when "alert" then "danger" end %> alert-dismissable fade show" role="alert">
      <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
   </div>
   <% end %>
</div>
